<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector
            android:enterFadeDuration="200"
            android:exitFadeDuration="200">
            <item
                android:state_focused="true">
                <shape
                    android:shape="rectangle">
                    <corners
                        android:radius="@dimen/edit_text_border_radius_size" />
                    <solid
                        android:color="?colorAccent" />
                </shape>
            </item>
            <item>
                <shape
                    android:shape="rectangle">
                    <corners
                        android:radius="@dimen/edit_text_border_radius_size" />
                    <solid
                        android:color="@color/transparent" />
                </shape>
            </item>
        </selector>
    </item>
    <item
        android:left="@dimen/edit_text_border_size"
        android:top="@dimen/edit_text_border_size"
        android:right="@dimen/edit_text_border_size"
        android:bottom="@dimen/edit_text_border_size">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/edit_text_radius_size" />
            <solid
                android:color="@color/edit_text_bg_color" />
            <padding
                android:left="@dimen/edit_text_padding_horizontal"
                android:top="@dimen/edit_text_padding_vertical"
                android:right="@dimen/edit_text_padding_horizontal"
                android:bottom="@dimen/edit_text_padding_vertical" />
        </shape>
    </item>
</layer-list>
