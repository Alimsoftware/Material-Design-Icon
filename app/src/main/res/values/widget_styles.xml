<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:popupBackground">@drawable/popup_bg</item>
        
    </style>

    <style name="Widget.PopupMenu.Overflow" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:popupBackground">@drawable/popup_overflow_bg</item>
        
    </style>
    
    <style name="Widget.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.Widget.EditText</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">?editTextBackground</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="TextAppearance.Widget.EditText" parent="@android:style/TextAppearance.Widget">
        <item name="android:textSize">@dimen/edit_text_font_size</item>
        <item name="android:textColor">?android:editTextColor</item>
    </style>
    
    <style name="Widget.SeekBar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">@dimen/seekbar_height</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">@dimen/seekbar_height</item>
        <item name="android:thumb">@null</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingEnd">0dip</item>
    </style>
	
	<style name="TextAppearance.Navigation.ItemText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/nav_item_title</item>
		<item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Widget.Button" parent="@android:style/TextAppearance.Widget">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?textColorButton</item>
    </style>

    <style name="Widget.ButtonBar" parent="@android:style/Widget">
        <item name="android:divider">@null</item>
        <item name="android:dividerPadding">0.0dip</item>
    </style>
    
    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Widget.Button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">?textColorButton</item>
        <item name="android:background">?buttonBackground</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Button.Primary" parent="@style/Widget.Button">
        <item name="android:textColor">?primaryButtonTextColor</item>
        <item name="android:background">?primaryButtonBackground</item>
    </style>
    
    <style name="TextAppearance.AlertDialogListItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">?android:textColorAlertDialogListItem</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="IconGrid">
        <item name="igColor">?android:textColorSecondary</item>
        <item name="igDash">false</item>
        <!-- frame, cross, unionJack, materialLite, materialFull -->
        <item name="igStyle">materialFull</item>
    </style>
</resources>
