<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!--########## 主题颜色 ##########-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorEdgeEffect">?android:colorAccent</item>
        
        <item name="android:backgroundDimAmount">@dimen/background_dim</item>
        
        <!--########## 弹窗 ##########-->
        <item name="dialogTheme">@style/Theme.Dialog</item>
        <item name="alertDialogStyle">@style/AlertDialog.Light</item>
        <item name="alertDialogTheme">@style/Theme.Dialog.Alert</item>

        <!--########## 弹出式菜单 ##########-->
        <item name="popupMenuStyle">@style/Widget.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.PopupMenu.Overflow</item>

        <!--########## 编辑框样式 ##########-->
        <item name="editTextStyle">@style/Widget.EditText</item>
        <item name="editTextBackground">@drawable/edit_text_bg</item>
        <item name="seekBarStyle">@style/Widget.SeekBar</item>
        
        <!--########## 按钮样式 ##########-->
        <item name="buttonStyle">@style/Widget.Button</item>
        <item name="buttonBarStyle">@style/Widget.ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/Widget.Button</item>

        <!--########## 按钮动态属性 ##########-->
        <item name="buttonBarDefaultButtonStyle">@style/Widget.Button.Primary</item>
        <item name="buttonBackground">@drawable/btn_bg</item>
        <item name="textColorButton">@color/button_text</item>
        <item name="primaryButtonTextColor">@color/button_text_color_guide</item>
        <item name="primaryButtonBackground">@drawable/btn_bg_primary</item>

    </style>

    <style name="AppTheme" parent="Base.AppTheme">
    </style>
    
    <style name="MainTheme" parent="AppTheme">
    </style>

    <style name="IconDetail.Theme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/dialog_background_scrim</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="Base.Theme.Dialog" parent="AppTheme">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        
        <item name="android:windowCloseOnTouchOutside">true</item>
        
    </style>

    <style name="Theme.Dialog" parent="Base.Theme.Dialog">
    </style>

    <style name="Base.Theme.Dialog.Alert" parent="Base.Theme.Dialog">
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width</item>
    </style>

    <style name="Theme.Dialog.Alert" parent="Base.Theme.Dialog.Alert">
        <item name="alertDialogStyle">@style/AlertDialog.Light</item>
        
	</style>
    
    <style name="AlertDialog.Light" parent="@style/AlertDialog.AppCompat.Light" >
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        
        <item name="android:layout">@layout/abc_alert_dialog_custom</item>
        <item name="singleChoiceItemLayout">@layout/select_dialog_singlechoice_custom</item>
        <item name="listItemLayout">@layout/select_dialog_item_custom</item>
    </style>
    
</resources>
